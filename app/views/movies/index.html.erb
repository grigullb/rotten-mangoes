<h1>Rotten Mangoes</h1>
<%= link_to "Submit a movie!", new_movie_path %>

<%= form_tag movies_path, method: 'get' do |f|%>
  <p>
  	Title:
    <%= text_field_tag 'title', params[:title] %>
  </p>
  <p>
  	Director: 
    <%= text_field_tag 'director', params[:director] %>
  </p>
  <p>
  	Duration: 
  	<%= select_tag(:duration, options_for_select(["", "under 90", "Between 90 and 120", "Over 120"])) %>
  </p>
  <p>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>
<hr/>
<% @movies.each do |movie| %>
  <%= link_to image_tag(movie.image_url(:thumb).to_s), movie_path(movie) %>
  <h2><%= link_to movie.title, movie_path(movie) %> | <%= movie.review_average %>/10</h2>
  <h3><%= formatted_date(movie.release_date) %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
  <p><%= movie.description %></p>
  <hr>
<% end %>