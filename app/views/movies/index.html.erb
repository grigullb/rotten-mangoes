<h1>Rotten Mangoes</h1>
<%= link_to "Submit a movie!", new_movie_path %>

<%= form_tag movies_path, method: 'get' do |f|%>
  <p>
  	Search:
    <%= text_field_tag 'search_term', params[:search_term] %>
  </p>
  <p>
  	Duration: 
  	<%= select_tag(:duration, options_for_select(["", "under 90", "Between 90 and 120", "Over 120"])) %>
  </p>
  <p>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>
<hr/>

<%= render "movie" %>